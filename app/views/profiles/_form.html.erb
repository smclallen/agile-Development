<%= form_for @profile, html: { multipart: true } do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="pagewrap">
      <div class="field">
        <%= f.label :fullname %><br>
        <%= f.text_field :fullname %>
      </div>
      <div class="field">
        <%= f.label :age %><br>
        <%= f.number_field :age %>
      </div>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :major %><br>
        <%= f.text_field :major %>
      </div>
      <div class="field gender-field">

        <%= f.label :gender %><br><br>
        <%= radio_button_tag( :gender, 'Female') %>
        <%= label_tag( 'Female') %><br>
        <%= radio_button_tag( :gender, 'Male') %>
        <%= label_tag( 'Male') %><br><br>

      </div>
      <div class="field">
        <%= f.label :schoolName %><br>
        <%= f.text_field :schoolName %>
      </div>
      <div class="field">
        <%= f.label :smoke %><br>
        <%= f.check_box :smoke %>
      </div>
      <div class="field">
        <%= f.label :pet %><br>
        <%= f.check_box :pet %>
      </div>
      <div class="field">
        <%= f.label :drive %><br>
        <%= f.check_box :drive %>
      </div>
      <div class="field">
        <%= f.label :bio %><br>
        <%= f.text_area :bio %>
      </div>
      <!--<div class="field">-->
        <%#= f.label :avatar %><br>
        <!--<%#= f.text_field :avatar %>-->
      <!--</div>-->
    <div class="field">
      <%= f.label :photo %><br>
      <%= f.file_field :photo %>
    </div>
      <div class="actions">
        <%= f.submit %>
      </div>
  </div>
<% end %>
